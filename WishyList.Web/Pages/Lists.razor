@page "/lists"
@inherits ListsBase

@attribute [Authorize]

@if (Member == null)
{
    <h1> Retrieving your info, please wait...</h1>
}
else
{
    <h1> @Member.Name's Lists</h1>

    @if (Lists.Count() == 0)
    {
        <button class="btn btn-primary">New List</button>
    }
    else
    {
        <ul>
            @foreach (var list in Lists)
            {
                <li>@list.Name</li>
            }
        </ul>
    }

}



