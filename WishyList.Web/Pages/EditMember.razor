@page "/editmember/{id}"
@inherits EditMemberBase

<EditForm Model="@Member" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>Edit Member</h3>
    <hr />
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="name" class="form-control" placeholder="Name"
                       @bind-Value="Member.Name" />
            <ValidationMessage For="@(() => Member.Name)"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" readonly class="form-control" placeholder="Email" 
                       @bind-Value="Member.Email" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>